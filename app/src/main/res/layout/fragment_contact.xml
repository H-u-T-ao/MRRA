<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    tools:context=".fragment.mrra.ContactFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_contact_introduction"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_contact" />

    <View
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_alpha_effect_270" />

    <View
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_above="@id/tv_contact_introduction"
        android:background="@drawable/bg_alpha_effect_90" />

    <TextView
        android:id="@+id/tv_contact_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mrra_contact_text"
        android:textColor="?attr/itemTextColor" />

</RelativeLayout>