<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.healthy.HealthyFragment">

    <TextView
        android:id="@+id/tv_healthy_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnBackground"
        android:elevation="2dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_healthy_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_healthy_status_bar"
        android:background="?attr/colorOnBackground"
        android:elevation="2dp"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextAppearance="@style/TabLayoutStyle"
        app:tabTextColor="@color/gray_transparent_80" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_healthy_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_healthy_tab"
        android:background="?attr/colorOnBackground" />

</RelativeLayout>